<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarAlumno">

    <Button
        android:id="@+id/BRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="72dp"
        android:text="Registrar alumno"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ETNombreregistrar"
        android:layout_width="286dp"
        android:layout_height="85dp"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:hint="Introduce el nombre"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ETApellidosregistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/ETApellidosregistrar"
        android:layout_width="279dp"
        android:layout_height="77dp"
        android:layout_marginBottom="112dp"
        android:ems="10"
        android:hint="Introduce los apellidos"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ETCursoregistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ETCursoregistrar"
        android:layout_width="279dp"
        android:layout_height="73dp"
        android:layout_marginBottom="96dp"
        android:ems="10"
        android:hint="Introduce el curso"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/BRegistrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>